<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/dialog_bf">

    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Reporting a Problem"
       android:layout_marginTop="10dp"
       android:textColor="@color/black"
       android:textSize="25dp"
       android:layout_gravity="center"
       />


    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/issue_report"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:hint=" Please report your issue"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="outline"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <Button android:id="@+id/submit_issue"
        android:layout_height="wrap_content"
        android:text="submit"  android:focusable="false"
         android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:textSize="15dip" android:layout_width="wrap_content"
        android:layout_gravity="center"
        />

    <Button android:id="@+id/close_isuue"
        android:layout_height="wrap_content"
        android:text="close"  android:focusable="false"
        android:backgroundTint="#c19277"
        android:textColor="@color/white"
        android:textSize="15dip" android:layout_width="wrap_content"
        android:layout_gravity="center"
        />




</LinearLayout>