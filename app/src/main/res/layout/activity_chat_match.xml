<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chat_matchActivity">


    <TextView
        android:id="@+id/name_viachat_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Name"
        android:textSize="20dp"

        />

    <TextView
        android:id="@+id/time_viachat_match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_viachat_match"
        android:gravity="center"
        android:text="Time"
        android:textSize="15dp"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/private_message_list_user_match"
        android:layout_width="match_parent"
        android:layout_height="628dp"
        android:background="@color/white"
        android:layout_below="@id/time_viachat_match"
        android:layout_above="@+id/linearLayout3"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginRight="3dp"
            android:text="SUCCESS"
            android:textSize="11dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="3dp"
            android:id="@+id/success_button_match"
            android:gravity="center"/>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/sent_image_match"
            android:layout_marginTop="2dp"
            android:background="@drawable/ic_photo"
            android:layout_gravity="center"
            />

        <ImageButton
            android:id="@+id/sent_location_match"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_placeholder"
            android:layout_marginTop="2dp"/>


        <EditText
            android:id="@+id/input_message_match"
            android:layout_width="215dp"
            android:layout_height="wrap_content"

            android:padding="15dp"
            android:hint="type message here..."
            android:inputType="textPersonName" />

        <ImageButton

            android:id="@+id/sent_message_match"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_sent" />
    </LinearLayout>



</RelativeLayout>