<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingRight="5dp"
        android:src="@drawable/profile"
         />

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:layout_alignParentTop="true"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="Reciever Message Here"
        android:padding="10dp"
        android:paddingEnd="23dp"
        android:textSize="14dp"
        android:background="@drawable/receiver_message_layout"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/time_receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:text="Time"
        android:textSize="10dp"
        android:layout_below="@+id/receiver_message_text"
        />



    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:autoLink="web"
        android:linksClickable="true"

        android:layout_marginEnd="3dp"
        android:background="@drawable/sender_message_layout"
        android:padding="10dp"
        android:paddingEnd="25dp"
        android:text="sender message"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textSize="10dp"
        android:layout_alignParentEnd="true"
        android:paddingEnd="25dp"
        android:layout_below="@id/sender_message_text"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/message_sender_image_view"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/message_receiver_image_view"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"

        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/time_receiver_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/message_profile_image"
        android:text="Time"
        android:textSize="10dp"
        android:layout_below="@+id/message_receiver_image_view"
        />

    <TextView
        android:id="@+id/time_sender_image_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time"
        android:layout_alignParentEnd="true"
        android:paddingEnd="25dp"
        android:textSize="10dp"
        android:layout_below="@+id/message_sender_image_view"
        />


</RelativeLayout>