<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Exchange_act">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refresh_exchange_act"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/current_location"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="current"
            android:textSize="15dp" />

        <TableLayout
            android:id="@+id/tableLayout2"
            android:layout_width="match_parent"
            android:layout_height="103dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_horizontal"
                    android:text="I have:  "
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/have_currency"
                    android:layout_width="87dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Amount :"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Optional for search"
                    android:textSize="14dp"
                    android:inputType="number" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="71dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="I want:  "
                    android:textAlignment="center"
                    android:textSize="20dp" />

                <Spinner
                    android:id="@+id/want_currency"
                    android:layout_width="102dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="327dp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  Price :"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/rates"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:hint="Optional for search"
                    android:textSize="14dp"
                    android:ems="10"
                    android:inputType="number" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/post"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:backgroundTint="#62959c"
                android:text="Post" />

            <Button
                android:id="@+id/search_btn"
                android:layout_width="148dp"
                android:layout_height="match_parent"
                android:backgroundTint="#c19277"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="Search"  />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/currency_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/currency_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="currency" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/first_converter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    android:text="1st" />

                <TextView
                    android:id="@+id/second_converter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="2nd" />
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exchange_result"
            android:layout_width="match_parent"
            android:layout_height="310dp" />


    </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>